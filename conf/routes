# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                              controllers.Application.index()

GET         /api/v1/companies              controllers.CompaniesController.getAllCompanies()
POST        /api/v1/companies              controllers.CompaniesController.createCompany()

POST        /api/v1/identifications        controllers.IdentificationsController.startIdentification()
GET         /api/v1/identifications        controllers.IdentificationsController.getAllIdentifications()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
